<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="@dimen/_200sdp"

           android:layout_marginTop="@dimen/activity_horizontal_margin_50"
           android:src="@drawable/logo_welcome"/>



       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingVertical="@dimen/activity_horizontal_margin_5"
           android:text="@string/ch_o_m_ng_n"
           android:textSize="@dimen/text_size_12"
           android:textColor="@color/black"

           android:gravity="center_horizontal|center_vertical"
           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:text="@string/slogan"
           android:textSize="@dimen/text_size_12"
           android:textColor="@color/black"
           android:textStyle="bold"

        
           android:gravity="center_horizontal|center_vertical"
           />

       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:text="@string/login"
           android:textSize="@dimen/text_size_12"
           android:textColor="@color/white"

           android:padding="@dimen/activity_input_padding"
           android:layout_marginTop="@dimen/activity_top_margin_50"
           android:layout_marginHorizontal="@dimen/activity_horizontal_margin_20"

           android:background="@drawable/bg_login"

        
           android:gravity="center_horizontal|center_vertical"
           />

       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:text="@string/register"
           android:textSize="@dimen/text_size_12"
           android:textColor="@color/D91E18"
          android:padding="@dimen/activity_input_padding"
           android:layout_marginTop="@dimen/activity_top_margin_20"
           android:layout_marginHorizontal="@dimen/activity_horizontal_margin_20"
           android:background="@drawable/bg_register"


        
           android:gravity="center_horizontal|center_vertical"
           />
   </LinearLayout>

</ScrollView>