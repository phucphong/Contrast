<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
   >

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/back"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:text="@string/createAccount"
                android:textSize="@dimen/text_size_20"
                android:layout_marginTop="@dimen/_50sdp"
                android:textColor="@color/color151515"
                android:textStyle="bold"


                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phoneNumber"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:hint="@string/enterPhoneNumberItMe"
                android:inputType="number"

                android:textColorHint="@color/AFAFAF"
                android:id="@+id/tvNumber"
                android:padding="@dimen/activity_input_padding"
                android:layout_marginTop="@dimen/activity_top_margin_5"
                android:background="@drawable/bg_input"
                />



        </LinearLayout>
    </ScrollView>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_5sdp"
        android:text="@string/confirmApp"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"
        android:layout_marginVertical="@dimen/_30sdp"
        android:textColor="@color/AFAFAF"



        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/white"
        android:id="@+id/tvConfirm"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:padding="@dimen/activity_input_padding"
        android:layout_marginBottom="@dimen/_30sdp"

        android:background="@drawable/bg_login"
        android:gravity="center_horizontal|center_vertical"
        />
</LinearLayout>